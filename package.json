{
  "name": "role-based-app",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "server",
    "src"
  ],
  "scripts": {
    "format:fix": "prettier --write './**/*.{js,ts}{x,}'",
    "lint": "eslint --fix --ext .js,.jsx .",
    "doc": "apidoc -i ./server/v1/controllers -e node_modules -o ./server/v1/documentation/api",
    "client": "npm start --prefix web",
    "server": "nodemon ./server/v1/index.js --ignore web",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "axios": "^1.6.8",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "chalk": "^4",
    "concurrently": "^7.6.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.2.5",
    "path": "^0.12.7",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "sequelize": "^6.6.2",
    "sequelize-cli": "^6.2.0",
    "standard": "^16.0.3",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jsdoc": "^3.6.7",
    "nodemon": "^3.1.0"
  }
  
}
